<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de cliente"
        android:id="@+id/textView3"
        android:textSize="36dp"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apellidopaterno"
        android:hint="Apellido Paterno"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apellidomaterno"
        android:hint="Apellido Materno"
        android:layout_below="@+id/apellidopaterno"
        android:layout_alignLeft="@+id/apellidopaterno"
        android:layout_alignStart="@+id/apellidopaterno"
        android:layout_alignRight="@+id/apellidopaterno"
        android:layout_alignEnd="@+id/apellidopaterno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:hint="Nombre"
        android:layout_below="@+id/apellidomaterno"
        android:layout_alignLeft="@+id/apellidomaterno"
        android:layout_alignStart="@+id/apellidomaterno"
        android:layout_alignRight="@+id/apellidomaterno"
        android:layout_alignEnd="@+id/apellidomaterno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dni"
        android:hint="DNI"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_alignRight="@+id/nombre"
        android:layout_alignEnd="@+id/nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ciudad"
        android:hint="Ciudad"
        android:layout_below="@+id/dni"
        android:layout_alignRight="@+id/dni"
        android:layout_alignEnd="@+id/dni"
        android:layout_alignLeft="@+id/dni"
        android:layout_alignStart="@+id/dni" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/direccion"
        android:hint="Direccion"
        android:layout_below="@+id/ciudad"
        android:layout_alignLeft="@+id/ciudad"
        android:layout_alignStart="@+id/ciudad"
        android:layout_alignRight="@+id/ciudad"
        android:layout_alignEnd="@+id/ciudad" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefono"
        android:hint="Telefono"
        android:layout_below="@+id/direccion"
        android:layout_alignLeft="@+id/direccion"
        android:layout_alignStart="@+id/direccion"
        android:layout_alignRight="@+id/direccion"
        android:layout_alignEnd="@+id/direccion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_below="@+id/telefono"
        android:layout_alignLeft="@+id/telefono"
        android:layout_alignStart="@+id/telefono"
        android:layout_alignRight="@+id/telefono"
        android:layout_alignEnd="@+id/telefono" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/button"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:onClick="registrarcliente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menu"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:onClick="menu" />
</RelativeLayout>