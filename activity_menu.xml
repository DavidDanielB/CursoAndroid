<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      Registrar cliente"
        android:textSize="36dp"
        android:onClick="registrarcliente"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="118dp"
        android:id="@+id/textView2"
        android:background="#81b8ef"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Listar cliente por dni"
        android:textSize="36dp"
        android:onClick="listarcliente"
        android:nestedScrollingEnabled="true"
        android:id="@+id/textView"
        android:background="#b0efd8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="       Salir de Menu"
        android:textSize="36dp"
        android:onClick="salir"
        android:nestedScrollingEnabled="true"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:background="#f0dcbf" />
</RelativeLayout>